// Evironmental settings
//
set bob_pitch		0
set bob_roll		0
set bob_up		0

// X11 video settings
set cl_blend		0
set cl_gun		0
set cl_noskins		1
set cl_particles	0
set cl_run		1	// always run

set crosshair		3	// angle crosshair
set fov			120	// field of view
set freelook		1
set g_select_empty	1

set gender		female
set hand		2	// center-handed

unbindall

// Some useful (or not) aliases
//
alias	+dj	"+moveup;wait;wait;wait;wait;-moveup;wait;wait;wait;wait;+moveup"
alias	-dj	"-moveup"

// Action bindings
//
bind	w	"+forward"
bind	s	"+back"
bind	a	"+moveleft"
bind	d	"+moveright"
bind	space	"+moveup"
bind	alt	"+movedown"
bind	shift	"+walk"
bind	z	"+rj"
bind	mouse1	"+attack"
bind	mouse2	"+dj"

// Useful weapon aliases and bindings
//
//   q	 rail
//   e	 rl
//   c	*perforator/machinegun
//   f	*piper/grenades
//   3	*ssg/sg
//   x	*bfg10k/hyper
//   1	 blaster
//

// define prettier shorter names
alias	bl	"use blaster"
alias	sg	"use shotgun"
alias	ssg	"use super shotgun"
alias	mg	"use machinegun"
alias	chg	"use chaingun"
alias	hg	"use grenades"
alias	gl	"use grenade launcher"
alias	rl	"use rocket launcher"
alias	hb	"use hyperblaster"
alias	rg	"use railgun"
alias	bfg	"use bfg10k"

